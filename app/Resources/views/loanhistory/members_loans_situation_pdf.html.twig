<page backtop="10mm" backleft="10mm" backright="10mm" backbottom="10mm" footer="page;">
    <page_footer>
        <hr />
        <span>{{agency.abreviation}}</span><span style="margin-left:500px;">GreenSoft-Team</span>
    </page_footer>


    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.abreviation}}</b><br/>
                 <b>{{agency.name}}</b><br>
                 <b>TEL: {{agency.phoneNumber}}</b><br>
                 <b>PO BOX: {{agency.poBox}}</b><br>

            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table><br>

    <table style="margin-top: 10px;">
        <tr>
            <td class="20p" style="text-align: left;"></td>
            <td class="60p" style="text-align: center; font-size:20px"><strong>
            MEMBERS LOANS SITUATIONS
            </strong></td>
            <td class="20p" style="text-align: right;"></td>
        </tr>
    </table><br>
    <table class="trialbalance">
        <tr>
            <th style="background: gray; text-align:center" class="10p">DATE</th>
            <th style="background: gray; text-align:center" class="10p">CODE</th>
            <th style="background: gray; text-align:center" class="40p">ACCOUNT NAME</th>
            <th style="background: gray; text-align:center" class="10p">LOAN CONTRACTED</th>
            <th style="background: gray; text-align:center" class="10p">LOAN REPAID</th>
            <th style="background: gray; text-align:center" class="10p">UNPAID INT</th>
            <th style="background: gray; text-align:center" class="10p">BALANCE</th>
        </tr>
            {% set totalLC = 0 %}
            {% set totalLR = 0 %}
            {% set totalUI = 0 %}
            {% set totalRA = 0 %}
            {% set totalBA = 0 %}

            {% for loan in loans %}
                <tr>
                    <td style="text-align:center">{{loan.dateLoan | date('d-m-Y') }}</td>
                    <td style="text-align:center">{{loan.loanCode }}</td>
                    <td style="text-align:center">{{loan.physicalMember }}</td>
                    <td style="text-align:center">{{loan.loanAmount |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center">
                        {% if loan.loanHistory %}
                            {{(loan.loanAmount - loan.loanHistory.remainAmount) |number_format(0, '.', ' ')}}
                        {% else %}
                            0
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                        {% if loan.loanHistory %}
                            {{loan.loanHistory.unpaidInterest |number_format(0, '.', ' ')}}
                        {% else %}
                            0
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                        {% if loan.loanHistory %}
                            {{loan.loanHistory.remainAmount |number_format(0, '.', ' ')}}
                        {% else %}
                            {{loan.loanAmount}}
                        {% endif %}
                    </td>
                </tr>
                {% set totalLC = totalLC + loan.loanAmount %}
                {% if loan.loanHistory %}
                    {% set totalLR = totalLR + (loan.loanAmount - loan.loanHistory.remainAmount) %}
                {% endif %}
                {% if loan.loanHistory %}
                    {% set totalUI = totalUI + loan.loanHistory.unpaidInterest %}
                {% endif %}
                {% if loan.loanHistory %}
                    {% set totalBA = totalBA + loan.loanHistory.remainAmount %}
                {% else %}
                    {% set totalBA = totalBA + loan.loanAmount %}
                {% endif %}
            {% endfor %}
            <tr>
                <td style="text-align:center"></td>
                <td style="text-align:center"></td>
                <td style="text-align:center"><b>TOTAL</b></td>
                <td style="text-align:center"><b>{{totalLC |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalLR |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalUI |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalBA |number_format(0, '.', ' ')}}</b></td>
            </tr>
        </table>

</page>
{% include '/report/extra_file_report.css.html.twig' %}