<page backtop="10mm" backleft="10mm" backright="10mm" backbottom="10mm" footer="page;">
    <page_footer>
        <hr />
        <span>{{agency.abreviation}}</span><span style="margin-left:500px;">GreenSoft-Team</span>
    </page_footer>


    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.abreviation}}</b><br/>
                 <b>{{agency.name}}</b><br>
                 <b>{{agency.phoneNumber}}</b><br>
                 <b>{{agency.poBox}}</b><br>

            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table><br>

    <table style="margin-top: 10px;">
        <tr>
            <td class="20p" style="text-align: left;"></td>
            <td class="60p" style="text-align: center; font-size:20px"><strong>
            INTEREST PAYMENT  RECEIPT
            </strong></td>
            <td class="20p" style="text-align: right;"></td>
        </tr>
    </table><br>
    <table class="zoneInterest">
        <tr>
            <td class="50p">Code: <b>{{loanHistory.loan}}</b></td>
            <td class="50p">Date of payment: <b>{{loanHistory.dateOperation|date('d-m-Y')}}</b></td>
        </tr>
        <tr>
            <td class="50p">Loan Deadline: <b>{{loanHistory.loan.deadline |date('d-m-Y')}}</b></td>
            <td class="50p">Rate: <b>{{loanHistory.loan.rate ~"%"}}</b></td>
        </tr>
        <tr>
            <td class="50p">{# Initial Amount: <b>{{loanHistory.loan.loanAmount}}</b> #}</td>
            <td class="50p">Member: <b>
                {% if loanHistory.loan.physicalMember %}
                    {{loanHistory.loan.physicalMember}}
                {% else %}
                    {{loanHistory.loan.moralMember}}
                {% endif %}
            </b></td>
        </tr>
        <tr>
            <td class="50p">{# Remain Amount to pay: <b>{{loanHistory.remainAmount}}</b> #}</td>
            <td class="50p">Unpaid Interest for the month: <b>{{loanHistory.unpaidInterest}}</b></td>
        </tr>
        <tr>
            <td class="50p">Interest Paid: <b>{{loanHistory.interest}}</b></td>
            <td class="50p">Member Number: <b>
                {% if loanHistory.loan.physicalMember %}
                    {{loanHistory.loan.physicalMember.memberNumber}}
                {% else %}
                    {{loanHistory.loan.moralMember.memberNumber}}
                {% endif %}
            </b></td>
        </tr>
    </table>
<br><br>

<table style="margin-bottom:0px">
    <tr>
        <td class="20p">XAF: <b>F CFA</b></td>
        <td class="30p" style="text-align:right">Member Number: <b> 
        {% if loanHistory.loan.physicalMember %}
            {{loanHistory.loan.physicalMember.memberNumber}}
        {% else %}
            {{loanHistory.loan.moralMember.memberNumber}}
        {% endif %}
         </b></td>
        <td class="25p" style="text-align:right">
            <b>
                {% if loanHistory.loan.physicalMember %}
                    {{loanHistory.loan.physicalMember[:17]}}
                {% else %}
                    {{loanHistory.loan.moralMember[:17]}}
                {% endif %}
             </b>
        </td>
        <td class="25p" style="text-align:right">
            Interest: <b>{{loanHistory.interest}}</b>
        </td>
    </tr>
</table><br>
