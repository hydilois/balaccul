{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Monthly report{% endblock %}

{% block contenu %}

<div class="row">
	<div class="col-sm-12">
		<div class="card-box">
			<div class="row">
				<div class="col-lg-offset-1 col-lg-10">
					<h4 class="m-t-0 header-title text-center">INCOME AND EXPENDITURE A/C</h4>
					<form action="{{ path('reportitem_new_complete')}}" method="POST">
					<div class="p-20">
							<div class="form-group col-lg-offset-3 col-md-6">
						    	<label class="control-label"> Choose the period </label>
						        <div class="input-daterange input-group" id="date-range1">
						            <input type="text" class="form-control" name="start" />
						            <span class="input-group-addon bg-custom b-0 text-white">To</span>
						            <input type="text" class="form-control" name="end" />
						        </div>
							</div>
						<table id="items" class="table table-bordered m-0">
							<thead>
								<tr>
									<th>#</th>
									<th>ITEMS</th>
									<th>AMOUNT</th>
									<th>CATEGORY</th>
								</tr>
							</thead>
							<tbody>
								{% for key,item in items %}
									<tr>
										<td>{{key + 1}}</td>
										<td>{{item.name}}</td>
										<td><input class="form-control" name="{{item.id}}" id-item="{{item.id}}" type="number" value="0"/></td>
										<td>{{item.parentItem}}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table><br>
						<div class="form-group">
							<input  class="btn btn-default" type="submit" value="Generate" />
						</div>
					</div>
				</form>
				</div>
				</div>
					</div>	
					</div>
				</div>

{% include '/report/extras_report.css.html.twig' %}
{% include '/reportitem/extras_report.js.html.twig' %}

{% endblock %}