{% extends 'base.html.twig' %}

{% block contenu %}
    <h1 class="text-center">Classe edit</h1>
    <div class="col-lg-offset-3 col-lg-6">
        
    {{ form_start(edit_form) }}
        <div class="form-group">
            {{form_label(edit_form.name)}}
            {{form_errors(edit_form.name)}}
            {{form_widget(edit_form.name, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="form-group">
            {{form_label(edit_form.description)}}
            {{form_errors(edit_form.description)}}
            {{form_widget(edit_form.description, {'attr':{'class':'form-control'}})}}
        </div>
        <input class="btn btn-default" type="submit" value="Save" />
        <a class="btn btn-primary" href="{{ path('classe_index') }}">Back to the list</a>
    {{ form_end(edit_form) }}
    </div>
{% endblock %}
