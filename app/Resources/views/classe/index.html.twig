{% extends 'base.html.twig' %}
{% block title %}{{parent()}} classes list{% endblock %}
{% block contenu %}
     <ol class="breadcrumb">
    <li>
      <a href="#">BALACCUL</a>
    </li>
    <li>
      <a href="#">Classes</a>
    </li>
    <li class="active">
      Consult
    </li>
  </ol>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive"><a name="create-classe" class="btn btn-default pull-left">Add a new class</a><br>
            <h4 class="m-t-0 header-title text-center"><b>Classes list</b></h4>
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 100px;">Actions</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Totalamount</th>
                    </tr>
                </thead>
                {% for classe in classes %}
                    <tr>
                        <td>
                            <div class="input-group-btn">
                              <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Actions
                                <span class="fa fa-caret-down"></span></button>
                              <ul class="dropdown-menu">
                                <li>
                                    <a name="show-member" data-member="{{classe.id}}" href="{{path('classe_show', {id:classe.id})}}"><i class="fa fa-eye"></i> Show</a>
                                </li>
                                <li><a href="{{ path('classe_edit', { 'id': classe.id }) }}"><i class="fa fa-edit"></i> Edit</a></li>
                              </ul>
                            </div>
                    </td>
                    <td>{{ classe.name }}</td>
                    <td>{{ classe.classCategory }}</td>
                    <td>{{ classe.description }}</td>
                    <td>{{ classe.totalAmount }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

<!-- modal window to create a new classe -->

<div class="modal fade modal-create-classe" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
            <h3 class="text-center">Add a new class</h3>
      </div>
      <div class="modal-body">
        <div class="row">
            {{ form_start(formClass) }}
            <div class="col-md-12 col-sm-12">
                <fieldset>
                    <legend></legend>
                        <div class="form-group">
                            {{form_label(formClass.name)}}
                            {{form_errors(formClass.name)}}
                            {{form_widget(formClass.name, {'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{form_label(formClass.classCategory)}}
                            {{form_errors(formClass.classCategory)}}
                            {{form_widget(formClass.classCategory, {'attr':{'class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                        {{form_label(formClass.description)}}
                        {{form_errors(formClass.description)}}
                        {{form_widget(formClass.description, {'attr':{'class':'form-control'}})}}
                    </div>
                </fieldset>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <input class="btn btn-default pull-right" id="submit" type="submit" value="Enregistrer" />
      </div>
      {{ form_end(formClass) }}
    </div>
  </div>
</div>

</div>
        
    {% include './classe/extras.css.html.twig' %}
    {% include './classe/extras.js.html.twig' %}
{% endblock %}
