{% extends 'base.html.twig' %}
{% block title %}{{parent()}}Classes list{% endblock %}
{% block contenu %}
     <ol class="breadcrumb">
    <li>
      <a href="#">HYMIF</a>
    </li>
    <li>
      <a href="#">Classes</a>
    </li>
    <li class="active">
      Consult
    </li>
  </ol>
    <div class="card-box">
    <div class="row">
        <div class="col-sm-6">
                <a  href="{{path('classe_new')}}" class="btn btn-default pull-left">Add a new class</a><br>
            <h4 class="m-t-0 header-title text-center"><b>Classes list</b></h4>
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 100px;">Actions</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                {% for classe in classes %}
                    <tr>
                        <td>
                        <a class="btn btn-info" href="{{ path('classe_edit', { 'id': classe.id }) }}"><i class="fa fa-edit"></i> Edit</a>
                    </td>
                    <td>{{ classe.name }}</td>
                    <td>{{ classe.description }}</td>
                    <td>{{ classe.balance }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="col-sm-6">
    <canvas id="myChart" width="400" height="300"></canvas>
</div>
</div>
</div>
        
    {% include './classe/extras.css.html.twig' %}
    {% include './classe/extras.js.html.twig' %}

{% endblock %}
