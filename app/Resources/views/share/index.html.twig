{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Account Type list{% endblock %}

{% block contenu %}
         <ol class="breadcrumb">
        <li>
          <a href="#">BALACCUL</a>
        </li>
        <li>
          <a href="#">Account List</a>
        </li>
        <li class="active">
          Consult
        </li>
      </ol>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <div class="btn-group dropdown">
                      <button type="button" class="btn btn-default waves-effect waves-light"><i class="glyphicon glyphicon-plus-sign"></i> New Share Account</button>
                      <button type="button" class="btn btn-default dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"><i class="caret"></i></button>
                      <ul class="dropdown-menu" role="menu">
                        <li>
                          <a href="{{path('share_new')}}"class="text-center"> Physical Account</a>
                          <a href="{{path('share_new_moral')}}"class="text-center"> Moral Account</a>
                        </li>
                     </ul>
                  </div>
                  <br>
                <h4 class="m-t-0 header-title text-center"><b>Shares Accounts List</b></h4>
                <table id="datatable-buttons" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 100px;">Actions</th>
                            <th>Account Number</th>
                            <th>Owner</th>
                            <th>Balance</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    {% for account in shares %}
                        <tr>
                            <td>
                                <div class="input-group-btn">
                                  <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Actions
                                    <span class="fa fa-caret-down"></span></button>
                                  <ul class="dropdown-menu">
                                    <li><a href="#" data-account="{{account.id}}" name="accounttype-edit"><i class="fa fa-edit"></i> Edit</a></li>
                                  </ul>
                                </div>
                        </td>
                        <td>{{ account.accountNumber }}</td>
                        <td>
                          {% if account.physicalMember %}
                            {{account.physicalMember}}
                          {% else %}
                            {{account.moralMember}}
                          {% endif %}
                      </td>
                        <td>{{ account.solde }} F CFA</td>
                        <td>{% if account.status %}
                                <span class="label label-success">Active</span>
                            {% else %}
                                <span class="label label-danger">Inactive</span>
                            {% endif %}</td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
    {% include './account/extras.css.html.twig' %}
    {% include './account/extras.js.html.twig' %}
{% endblock %}