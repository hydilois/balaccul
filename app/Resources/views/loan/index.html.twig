{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Loan Operations{% endblock %}

{% block contenu %}
         <ol class="breadcrumb">
        <li>
          <a href="#">BALACCUL</a>
        </li>
        <li>
          <a href="#">Loans List</a>
        </li>
        <li class="active">
          Consult
        </li>
      </ol>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">
                <h4 class="m-t-0 header-title text-center"><b>LIST OF ALL LOANS CONTRACTED</b></h4>
                <table id="datatable-buttons" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 100px;">Actions</th>
                            <th>Code</th>
                            <th>Member</th>
                            <th>Date of loan</th>
                            <th>Dead line</th>
                            <th>Rate</th>
                            <th>Interest</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    {% for loan in loans %}
                        <tr>
                            <td>
                                <div class="input-group-btn">
                                  <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Actions
                                    <span class="fa fa-caret-down"></span></button>
                                  <ul class="dropdown-menu fadeInDown animated">
                                    <li><a target="_blank" href="{{path('loan_fees_receipt', {id:loan.id})}}"><i class="fa fa-file-pdf-o"></i> Receipt</a></li>
                                    <li><a href="{{path('loan_show', {id:loan.id})}}" data-loan="{{loan.id}}"><i class="fa fa-eye"></i> Detail</a></li>
                                  </ul>
                                </div>
                        </td>
                        <td>{{ loan.loanCode }}</td>
                        <td>{% if loan.physicalMember %}
                              {{loan.physicalMember}}
                            {% else %}
                              {{loan.moralMember}}
                            {% endif %}</td>
                        <td>{% if loan.dateLoan %}{{ loan.dateLoan|date('d-m-Y') }}{% endif %}</td>
                        <td>{% if loan.deadline %}{{ loan.deadline|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ loan.rate }}%</td>
                        <td>{% set interest = (loan.loanAmount * loan.rate)/100 %} {{ interest }}</td>
                        <td>{{ loan.loanAmount }}</td>
                        <td>{% if loan.status %}
                          <span class="label label-danger">Active</span>{% else %}<span class="label label-success">Close</span>{% endif %}</td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
    {% include './loan/extras.css.html.twig' %}
    {% include './loan/extras.js.html.twig' %}
{% endblock %}
