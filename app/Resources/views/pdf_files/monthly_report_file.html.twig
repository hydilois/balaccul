<page footer="page;">
    <page_footer>
        <hr />
        <span>{{agency.abreviation}}</span> <span style="margin-left:150px;">Printed By <b>{{currentUser}}</b></span><span style="margin-left:150px;">GreenSoft-Team</span>
    </page_footer>
    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.name}}</b> <br/>
                 <b>{{agency.abreviation}} HEAD OFFICE</b> <br/>
                 <b>Tel: {{agency.phoneNumber}}</b><br>
                 <b>PO BOX: {{agency.poBox}}</b>
            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="100p">
                <h3 style="text-align:center"><strong>INCOME AND EXPENDITURE A/C</strong></h3>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="50p">Printed On Date: <strong>{{date |date('d-m-Y H:m:s')}}</strong></td>
            <td style="text-align:right" class="50p">Period From: <b>{{ displayDateStart}}</b> to <b>{{displayDateEnd}}</b></td>
        </tr>
    </table> <br>
    <table class="report">
        <tr>
            <th style="background: gray; text-align:center" class="20p">A/C NÂ°</th>
            <th style="background: gray; text-align:center" class="50p">DESCRIPTION</th>
            <th style="background: gray; text-align:center" class="15p">AMOUNT</th>
            <th style="background: gray; text-align:center" class="15p">AMOUNT</th>
        </tr>
            {% set totalIncome = 0 %}
            {% set totalExpenditure = 0 %}
            {% for operation in incomeOp %} 
                <tr>
                    <td style="text-align:center">{{operation.ia_accountNumber }}</td>
                    <td style="text-align:center">{{operation.ia_accountName[:30]}}</td>
                    <td style="text-align:center">{{operation.amount |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center"></td>
                </tr>
                {% set totalIncome = totalIncome + operation.amount %}
            {% endfor %}
            <tr>
                <td colspan="3" class="30p" style="text-align:center"><b>TOTAL INCOME FOR THE MONTH</b></td>
                <td class="15p" style="text-align:center"><b>{{totalIncome |number_format(0, '.', ' ')}}</b></td>
            </tr>

            {% for operation in expenditureOp %} 
                <tr>
                    <td style="text-align:center">{{operation.ia_accountNumber }}</td>
                    <td style="text-align:center">{{operation.ia_accountName[:30]}}</td>
                    <td style="text-align:center">{{operation.credit |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center"></td>
                </tr>
                {% set totalExpenditure = totalExpenditure + operation.credit %}
            {% endfor %}
            <tr>
                <td colspan="3" class="30p" style="text-align:center"><b>TOTAL EXPENDITURE FOR THE MONTH</b></td>
                <td class="15p" style="text-align:center"><b>{{totalExpenditure |number_format(0, '.', ' ')}}</b></td>
            </tr>
            <tr>
                <td colspan="3" class="30p" style="text-align:center"><b>NET PROFIT FOR THE MONTH(UNDIVIDED EARNINGS)</b></td>
                {% set benefit = totalIncome - totalExpenditure %}
                <td class="15p" style="text-align:center"><b>{{benefit |number_format(0, '.', ' ')}}</b></td>
            </tr>
    </table>
</page>

