<page footer="page;">
    <page_footer>
        <span>{{agency.abreviation}}</span> <span style="margin-left:500px;">GreenSoft-Team</span>
    </page_footer>
    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.name}}</b> <br/>
                 <b>{{agency.abreviation}} HEAD OFFICE</b><br/>
                 <b>TEL: {{agency.phoneNumber}}</b><br>
                 <b>POX BOX: {{agency.poBox}}</b>
            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>
    {% if type == "Members" %}
        <table>
            <tr>
                <td class="100p">
                    <h3 style="text-align:center"><strong>MEMBERS LIST</strong></h3>
                </td>
            </tr>
        </table>
        <table class="trialbalance">
            <tr>
                <th style="background: gray; text-align:center" class="10p">A/C NÂ°</th>
                <th style="background: gray; text-align:center" class="30p">ACCOUNT NAME</th>
                <th style="background: gray; text-align:center" class="10p">REG</th>
                <th style="background: gray; text-align:center" class="15p">SHARES</th>
                <th style="background: gray; text-align:center" class="15p">SAVINGS</th>
                <th style="background: gray; text-align:center" class="10p">DEPOSITS</th>
                <th style="background: gray; text-align:center" class="10p">BF</th>
            </tr>
                {% set totalReg = 0 %}
                {% set totalSh = 0 %}
                {% set totalSa = 0 %}
                {% set totalDep = 0 %}
                {% set totalBF = 0 %}
                {% for account in lists %}
                    <tr>
                        <td style="text-align:center">{{account.memberNumber }}</td>
                        <td style="text-align:center">{{account.name[:20]}}</td>
                        <td style="text-align:center">{{account.registrationFees |number_format(0, '.', ' ')}}</td>
                        <td style="text-align:center">{{account.share |number_format(0, '.', ' ')}}</td>
                        <td style="text-align:center">{{account.saving |number_format(0, '.', ' ')}}</td>
                        <td style="text-align:center">{{account.deposit |number_format(0, '.', ' ')}}</td>
                        <td style="text-align:center">{{account.buildingFees |number_format(0, '.', ' ')}}</td>
                    </tr>
                    {% set totalReg = totalReg + account.registrationFees %}
                    {% set totalSh = totalSh + account.share %}
                    {% set totalSa = totalSa + account.saving %}
                    {% set totalDep = totalDep + account.deposit %}
                    {% set totalBF = totalBF + account.buildingFees %}
                {% endfor %}
                <tr>
                    <td colspan="2" style="text-align:center"><b>TOTAL</b></td>
                    <td style="text-align:center"><b>{{totalReg |number_format(0, '.', ' ')}}</b></td>
                    <td style="text-align:center"><b>{{totalSh |number_format(0, '.', ' ')}}</b></td>
                    <td style="text-align:center"><b>{{totalSa |number_format(0, '.', ' ')}}</b></td>
                    <td style="text-align:center"><b>{{totalDep |number_format(0, '.', ' ')}}</b></td>
                    <td style="text-align:center"><b>{{totalBF |number_format(0, '.', ' ')}}</b></td>
                </tr>
        </table>
    {% else %}
    <table>
        <tr>
            <td class="100p">
                <h3 style="text-align:center"><strong>lOANS LIST</strong></h3>
            </td>
        </tr>
    </table>
    <table class="trialbalance">
        <tr>
            <th style="background: gray; text-align:center" class="10p">CODE</th>
            <th style="background: gray; text-align:center" class="30p">LOAN CONTRACTED</th>
            <th style="background: gray; text-align:center" class="20p">LOAN REPAID</th>
            <th style="background: gray; text-align:center" class="20p">UNPAID INTEREST</th>
            <th style="background: gray; text-align:center" class="20p">BALANCE</th>
        </tr>
            {% set totalLC = 0 %}
            {% set totalLR = 0 %}
            {% set totalUI = 0 %}
            {% set totalRA = 0 %}
            {% set totalBA = 0 %}
        {% if lists %}
            {% for loan in lists %}
                <tr>
                    <td style="text-align:center">{{loan.l_loanCode }}</td>
                    <td style="text-align:center">{{loan.l_loanAmount |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center">{{(loan.l_loanAmount - loan.lh_remainAmount) |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center">{{loan.lh_unpaidInterest |number_format(0, '.', ' ')}}</td>
                    <td style="text-align:center">{{loan.lh_remainAmount |number_format(0, '.', ' ')}}</td>
                </tr>
                {% set totalLC = totalLC + loan.l_loanAmount %}
                {% set totalLR = totalLR + (loan.l_loanAmount - loan.lh_remainAmount) %}
                {% set totalUI = totalUI + loan.lh_unpaidInterest %}
                {% set totalBA = totalBA + loan.lh_remainAmount %}
            {% endfor %}
        {% endif %}
        {% if listLoanWithOutHistory %}
            {% for loan in listLoanWithOutHistory %}
                <tr>
                    <td style="text-align:center">{{loan.loanCode }}</td>
                    <td style="text-align:center">{{loan.loanAmount}}</td>
                    <td style="text-align:center">0</td>
                    <td style="text-align:center">0</td>
                    <td style="text-align:center">{{loan.loanAmount |number_format(0, '.', ' ')}}</td>
                </tr>
                {% set totalLC = totalLC + loan.loanAmount %}
                {% set totalBA = totalBA + loan.loanAmount %}
            {% endfor %}
        {% endif %}
            <tr>
                <td style="text-align:center"><b>TOTAL</b></td>
                <td style="text-align:center"><b>{{totalLC |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalLR |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalUI |number_format(0, '.', ' ')}}</b></td>
                <td style="text-align:center"><b>{{totalBA |number_format(0, '.', ' ')}}</b></td>
            </tr>
        </table>
    {% endif %}
</page>

