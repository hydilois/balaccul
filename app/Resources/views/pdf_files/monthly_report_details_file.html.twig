<style type="text/css">
    table {
        width: 100%;
        line-height: 5mm;
        border-collapse: collapse;
    }

    .p-20{width: 20%;}
    .p-15 { width: 15%; }
    .p-30 {width: 30%;}
    .p-40{width: 40%}
    .p-50 { width: 50%; }
    .p-60 { width: 60%; }
    .p-70 { width: 70%; }
    .p-100{width: 100%;}

    .report th, .report td{
        border: 1px solid black;
        height: 15px;
        font-size: 15px;
    }

    .report th {
        background: gray; text-align:center;
    }

    .text-center {
        text-align: center;
    }
</style>
<page footer="page;">
    <page_footer>
        <hr />
        <span><b>{{ agency.abreviation }}</b></span> <span style="margin-left:80px;">Generated By <b>{{ currentUser }}</b></span><span style="margin-left:100px;">GreenSoft-Group Technologies</span>
    </page_footer>
    <table>
        <tr>
            <td class="p-60">
                <b>{{agency.name}}</b> <br/>
                <b>HEAD OFFICE {{agency.town}}</b> <br/>
                <b>Tel: {{agency.phoneNumber}}</b><br>
                <b>PO BOX: {{agency.poBox}}</b>
            </td>
            <td  style="text-align: right;" class="p-40">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="p-50">Generated on: <strong>{{date |date('d-m-Y H:i')}}</strong></td>
            <td style="text-align:right" class="p-50">Period From: <b>{{ displayDateStart}}</b> to <b>{{displayDateEnd}}</b></td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="p-100">
                <h3 class="text-center"><strong>INCOMES</strong></h3>
            </td>
        </tr>
    </table>
    <table class="report">
        <tr>
            <th class="p-10">Date</th>
            <th class="p-70">DESCRIPTION</th>
            <th class="p-20">AMOUNT</th>
        </tr>
        {% set totalIncome = 0 %}
        {% for operation in incomeOp %}
            <tr>
                <td class="text-center">{{ operation.op_dateOperation | date('d-m-Y') }}</td>
                <td class="text-center">{{ operation.op_accountTitle[:30]}}</td>
                <td class="text-center">{{ operation.op_debit |number_format(0, '.', ' ') }}</td>
            </tr>
            {% set totalIncome = totalIncome + operation.op_debit %}
        {% endfor %}
        <tr>
            <td></td>
            <td class="text-center"><b>TOTAL INCOME</b></td>
            <td class="p-20 text-center"><b>{{ totalIncome |number_format(0, '.', ' ') }}</b></td>
        </tr>
    </table>

    <table>
        <tr>
            <td class="p-100">
                <h3 class="text-center"><strong>EXPENDITURES</strong></h3>
            </td>
        </tr>
    </table>


        <table class="report">
            {% set totalExpenditure = 0 %}
            <tr>
                <th class="p-10">DATE</th>
                <th class="p-70">DESCRIPTION</th>
                <th class="p-20">AMOUNT</th>
            </tr>
        {% for operation in expenditureOp %}
            <tr>
                <td class="text-center">{{ operation.op_dateOperation | date('d-m-Y') }}</td>
                <td class="text-center">{{ operation.op_accountTitle[:30] }}</td>
                <td class="text-center">{{ operation.op_credit |number_format(0, '.', ' ') }}</td>
            </tr>
            {% set totalExpenditure = totalExpenditure + operation.op_credit %}
        {% endfor %}
        <tr>
            <td></td>
            <td class="text-center"><b>TOTAL EXPENDITURE FOR THE PERIOD</b></td>
            <td class="p-20 text-center"><b>{{ totalExpenditure |number_format(0, '.', ' ') }}</b></td>
        </tr>
    </table>
    <br><br>

    <table class="report">
        <tr>
            <td class="p-60 text-center"><b>NET PROFIT FOR THE PERIOD(UNDIVIDED EARNINGS)</b></td>
            {% set benefit = totalIncome - totalExpenditure %}
            <td class="p-40 text-center" style="color: red; font-size: 40px"><b>{{ benefit |number_format(0, '.', ' ') }}</b></td>
        </tr>
    </table>
</page>