<style type="text/css">
    table {
        width: 100%;
        line-height: 5mm;
        border-collapse: collapse;
    }

    .p-5{width: 5%}
    .p-45 { width: 45%; }
    .p-30{width: 30%;}
    .p-60 { width: 60%; }
    .p-40{width: 40%}
    .p-100{width: 100%;}

    .trial_balance td, .trial_balance th {
        border: 1px solid black;
        height: 25px;
