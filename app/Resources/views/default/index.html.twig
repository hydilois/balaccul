{% extends "base.html.twig" %}

{% block title %}
    {{parent()}} Home
{% endblock %}

{% block contenu %}
    <div class="well">
                    <h1 class="text-center"><b>{{ agency.name}}</b></h1><br>
         <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Fully Paid Shares</h4>
                    <h2 class="text-primary text-center"><span data-plugin="counterup">{{ fullyPaidShares }}</span> F</h2>
                    <p class="text-muted">Total Members: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
             <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Partial Paid Shares</h4>
                    <h2 class="text-primary text-center"><span data-plugin="counterup">{{ partialPaidShares }}</span> F</h2>
                    <p class="text-muted">Total Members: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
             <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Total Shares</h4>
                    <h2 class="text-primary text-center"><span data-plugin="counterup">{{ fullyPaidShares + partialPaidShares }}</span> F</h2>
                    <p class="text-muted">Total Members: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Total Savings</h4>
                    <h2 class="text-pink text-center"><span data-plugin="counterup">{{ totalSaving }}</span> F</h2>
                    <p class="text-muted">Total Account: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More details"></i></a>
                    <h4 class="text-dark">Deposit</h4>
                    <h2 class="text-warning text-center"><span data-plugin="counterup">{{ totalDeposit }}</span> F</h2>
                    <p class="text-muted">Total Account: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Building fees</h4>
                    <h2 class="text-dark text-center"><span data-plugin="counterup">{{ buildingFees }}</span> F</h2>
                    <p class="text-muted">Total Accounts: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <a href="{{path('member_index')}}"><i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Details"></i></a>
                    <h4 class="text-dark">Registration Fees</h4>
                    <h2 class="text-custom text-center"><span data-plugin="counterup">{{ totalRegistration }}</span> F</h2>
                    <p class="text-muted">Total Members: {{members|length }} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Total Loan Contracted by Members  and it is not yet paid"></i>
                    <h4 class="text-dark">Loans</h4>
                    <h2 class="text-custom text-center"><span data-plugin="counterup">{{  loanUnpaid  }}</span> F</h2>
                    <p class="text-muted">Total loans: {{loans |length}} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Last 24 Hours"></i>
                    <h4 class="text-dark">Unpaid interest</h4>
                    <h2 class="text-custom text-center"><span data-plugin="counterup">{{ unpaidInterest }}</span> F</h2>
                    <p class="text-muted">Total Loans: {{ loans|length}} <span class="pull-right"></span></p>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-3">
                <div class="card-box widget-box-1 bg-white">
                    <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Total daily savings recovered in {{ agency.abreviation }}"></i>
                    <h4 class="text-dark">Daily Savings</h4>
                    <h2 class="text-custom text-center"><span data-plugin="counterup">{{ totalDailySavings }}</span> F</h2>
                    <p class="text-muted">Total Collector: {{totaCollectors}} <span class="pull-right"></span></p>
                </div>
            </div>
        </div>
        {% if is_granted("ROLE_BOARD") or is_granted("ROLE_ADMINISTRATOR") %}
            <fieldset>
                <legend>CASH</legend>
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-lg-3">
                        <div class="card-box widget-box-1 bg-white">
                            <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Cash in hand for differents transactions"></i>
                            <h4 class="text-dark">CASH IN HAND</h4>
                            <h2 class="text-custom text-center"><span data-plugin="counterup">{{ cashOnHand }}</span> F</h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-lg-3">
                        <div class="card-box widget-box-1 bg-white">
                            <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Cash at Bayelle Credit Union Limited"></i>
                            <h4 class="text-dark">CASH AT BAYELE CU</h4>
                            <h2 class="text-custom text-center"><span data-plugin="counterup">{{ bayelleBalance }}</span> F</h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-lg-3">
                        <div class="card-box widget-box-1 bg-white">
                            <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Cash at Union Bank"></i>
                            <h4 class="text-dark">CASH AT UB</h4>
                            <h2 class="text-custom text-center"><span data-plugin="counterup">{{ ubBalance }}</span> F</h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-lg-3">
                        <div class="card-box widget-box-1 bg-white">
                            <i class="fa fa-info-circle text-muted pull-right inform" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Cumulation of the loan Interest"></i>
                            <h4 class="text-dark">LOAN INTEREST</h4>
                            <h2 class="text-custom text-center"><span data-plugin="counterup">{{ loanInterest }}</span> F</h2>
                        </div>
                    </div>
                </div>
            </fieldset>
        {% endif %}
    </div>
    <script src="{{asset('assets/plugins/chart.js/chart.min.js')}}"></script>
    <script src="{{asset('assets/pages/customChart.js')}}"></script>

{% include './default/extras.css.html.twig' %}
{% include './default/extras.js.html.twig' %}
{% endblock %}