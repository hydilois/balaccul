<page {# backimgy="middle" backcolor="red" #} {# backimg="./assets/images/products/big/1.jpg" #}footer="page">
    <page_footer>
        <hr />
        <span>{{agency.abreviation}}</span> <span style="margin-left:50px;">Printed By <b>{{currentUser}}</b></span><span style="margin-left:100px;">GreenSoft-Team</span>
    </page_footer>
    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.name}}</b> <br/>
                 <b>HEAD OFFICE {{agency.abreviation}}</b> <br/>
                 <b>Tel: {{agency.phoneNumber}}</b><br>
                 <b>Po Box: {{agency.poBox}}</b>
            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="100p">
                <h3 style="text-align:center"><strong>GENERAL LEDGER BALANCE</strong></h3>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td class="100p">DATE: <strong>{{date |date('d-m-Y H:m:s')}}</strong></td>
        </tr>
    </table><br>
        {% if operations %}
    <table class="eleves">
        <tr>
            <th style="text-align:center; background: gray" class="10p">Date</th>
            <th style="text-align:center; background: gray" class="40p">Description</th>
            <th style="text-align:center; background: gray" class="15p">Debit</th>
            <th style="text-align:center; background: gray" class="15p">Credit</th>
            <th style="text-align:center; background: gray" class="20p">Balance</th>
        </tr>
        {% set totalBalance = 0 %}
        {% set totalDebit = 0 %}
        {% for operation in operations %} 
            <tr>
                <td style="text-align:center">{{operation.dateOperation|date('d-m-Y')}}</td>
                <td style="text-align:center">{{operation.representative}}</td>
                <td style="text-align:center">{% if operation.debit != 0  %}
                                                    {{operation.debit}}
                                                {% else %}
                                                    //
                                                {% endif %}
                </td>
                <td style="text-align:center">{% if operation.credit != 0 %}
                                                    {{operation.credit}}
                                                {% else %}
                                                    //
                                                {% endif %}
                </td>
                <td style="text-align: center">
                    {% if operation.debit != 0 %}
                            {% set totalBalance = totalBalance  + operation.debit %}
                                {{totalBalance}} <b>D</b>
                    {% endif %}
                    {% if operation.credit != 0 %}
                            {% set totalBalance = totalBalance  - operation.credit %}
                                {% if totalBalance < 0 %}
                                    {# {% set absoluteBalance = %} #}
                                    {{totalBalance |abs |number_format(0, '.', ' ')}} <b>C</b>
                                    {% else %}
                                        {{totalBalance |number_format(0, '.', ' ')}} <b>D</b>
                                {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
     </table>
        {% endif %}
</page>

{% include '/report/extra_file_report.css.html.twig' %}