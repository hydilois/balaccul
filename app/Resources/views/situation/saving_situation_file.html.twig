<page backtop="10mm" backleft="10mm" backright="10mm" backbottom="10mm" footer="page;">
    <page_footer>
        <hr />
        <span>BALACCUL</span><span style="margin-left:550px;">GreenSoft-Team</span>
    </page_footer>


    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.name}}</b> <br/>
                 <b>HEAD OFFICE {{agency.abreviation}}</b> <br/>
                 <b>{{agency.phoneNumber}}</b>
            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>

    <table class="info1" style="margin-top: 10px;">
        <tr>
            <td class="25p" style="text-align: left;"></td>
            <td class="50p" style="text-align: center; font-size:20px"><strong>Member Situation on {{type}}</strong></td>
            <td class="25p" style="text-align: right;"></td>
        </tr>
    </table><br><br>
    <table class="info3">
        <tr>
            <td class="75p" style="text-align: left; border-top: none; font-size:15px">Account Name: <b>
                    {{member.name}}
            </b>
        </td>
            <td class="25p" style="text-align: left; border: none; font-size:15px">Account Number: <b>
                {{member.memberNumber}}
            </b>
            </td>
        </tr>
    </table><br>

    {% if operations %}
    <table class="eleves">
        <tr>
            <th style="background: gray; text-align:center" class="10p">Date</th>
            <th style="background: gray; text-align:center" class="15p">Description</th>
            <th style="background: gray; text-align:center" class="25p">Debit</th>
            <th style="background: gray; text-align:center" class="25p">Credit</th>
            <th style="background: gray; text-align:center" class="25p">Balance</th>
        </tr>
            
            {% for operation in operations %} 
                <tr>
                    <td style="text-align:center" >{{operation.dateOperation |date('d-m-Y') }}</td>
                    <td style="text-align:center">{{operation.typeOperation}}</td>
                    <td style="text-align:center">
                        {% if operation.typeOperation == "CASH OUT" %}
                            {{operation.amount}}
                        {% else %}
                            //
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                        {% if operation.typeOperation == "CASH IN" %}
                            {{operation.amount}}
                        {% else %}
                            //
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                            {{operation.balance}}
                    </td>
                </tr>
        {% endfor %}
                
    </table><br><br><br>
    {% else %}
                <h2 style="color: red; text-align:center">No results</h2>
    {% endif %}
    <table>
        <tr>
            <td class="100p" style="text-align:right">Done at: <b>{{agency.town}}</b> on <b>{{currentDate |date('d-m-Y')}}</b></td>
        </tr>
    </table>
</page>

