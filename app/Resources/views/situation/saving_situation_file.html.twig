<page footer="page;">
    <page_footer>
        <hr />
        <span>BALACCUL</span><span style="margin-left:520px;">GreenSoft-Team</span>
    </page_footer>


    <table>
        <tr>
            <td class="60p">
                 <b>{{agency.name}}</b> <br/>
                 <b>HEAD OFFICE {{agency.town}}</b> <br/>
                 <b>TEL: {{agency.phoneNumber}}</b><br>
                 <b>PO BOX: {{agency.poBox}}</b>
            </td>
            <td  style="text-align: right;" class="40p">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table>

    <table class="info1" style="margin-top: 10px;">
        <tr>
            <td class="25p" style="text-align: left;"></td>
            <td class="50p" style="text-align: center; font-size:20px"><strong>MEMBER SITUATION  ON {{type |upper}}</strong></td>
            <td class="25p" style="text-align: right;"></td>
        </tr>
    </table><br><br>
    <table class="info3">
        <tr>
            <td class="70p" style="text-align: left; border-top: none; font-size:15px">Account Name: <b>
                    {{member.name |upper}}
            </b>
        </td>
            <td class="30p" style="text-align: left; border: none; font-size:15px">Account Number: <b>
                {{member.memberNumber}}
            </b>
            </td>
        </tr>
    </table><br>

    <table class="eleves">
        <tr>
            <th style="background: gray; text-align:center" class="10p">DATE </th>
            <th style="background: gray; text-align:center" class="15p">DESCRIPTION</th>
            <th style="background: gray; text-align:center" class="25p">DEBIT</th>
            <th style="background: gray; text-align:center" class="25p">CREDIT</th>
            <th style="background: gray; text-align:center" class="25p">BALANCE</th>
        </tr>
            <tr>
                <td colspan="4" style="text-align:center; font-size:20px" ><b>INITIAL BALANCE</b></td>
        {% if firstOp %}
                <td style="text-align:center; font-size:20px">
                    {% if firstOp.typeOperation == "CASH IN" %}
                        {# {% set balance = firstOp.balance -  %} #}
                        <b>{{(firstOp.balance  - firstOp.amount) |number_format(0, '.', ' ') }}</b>
                    {% else %}
                        <b>{{(firstOp.balance  + firstOp.amount) |number_format(0, '.', ' ')}}</b>
                    {% endif %}
                </td>
        {% else %}
            <td style="text-align:center; font-size:20px">
               <b> {% if type == "Shares" %}
                    {{member.share |number_format(0, '.', ' ') }}
                {% elseif type == "Savings" %}
                    {{member.saving |number_format(0, '.', ' ')}}
                {% else %}
                    {{member.deposit |number_format(0, '.', ' ')}}
                {% endif %} </b>
            </td>
        {% endif %}
            </tr>
    {% if operations %}
            {% for operation in operations %} 
                <tr>
                    <td style="text-align:center" >{{operation.dateOperation |date('d-m-Y') }}</td>
                    <td style="text-align:center">{{operation.typeOperation}}</td>
                    <td style="text-align:center">
                        {% if operation.typeOperation == "CASH OUT" %}
                            {{operation.amount |number_format(0, '.', ' ')}}
                        {% else %}
                            //
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                        {% if operation.typeOperation == "CASH IN" %}
                            {{operation.amount |number_format(0, '.', ' ')}}
                        {% else %}
                            //
                        {% endif %}
                    </td>
                    <td style="text-align:center">
                            {{operation.balance |number_format(0, '.', ' ')}}
                    </td>
                </tr>
        {% endfor %}
    {% else %}
             <tr>
                 <td colspan="5" style="text-align:center; font-size:20px; color: red;" ><b>NO RESULTS</b></td>
             </tr>   
    {% endif %}
    </table><br><br>
    <table>
        <tr>
            <td class="100p" style="text-align:right">Done at: <b>{{agency.town}}</b> on <b>{{currentDate |date('d-m-Y')}}</b></td>
        </tr>
    </table>
</page>

{% include '/report/extra_file_report.css.html.twig' %}