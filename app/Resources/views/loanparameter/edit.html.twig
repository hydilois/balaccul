{% extends 'base.html.twig' %}
{% block title %}{{parent()}} Edit the Loan parameter{% endblock %}

{% block contenu %}

    <ol class="breadcrumb">
        <li>
            <a href="#">BALACCUL</a>
        </li>
        <li>
            <a href="#">Loan Parameter</a>
        </li>
        <li class="active">
            Edit
        </li>
    </ol>

        <!-- Forms -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <h4 class="m-t-0 header-title text-center"><b>Give the parameter of the loans</b></h4>
                                      {{ form_start(edit_form) }}
                                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                          <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(edit_form.parameter)}}
                                                  {{form_errors(edit_form.parameter)}}
                                                  {{form_widget(edit_form.parameter, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                          <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(edit_form.description)}}
                                                  {{form_errors(edit_form.description)}}
                                                  {{form_widget(edit_form.description, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                  </div>
                                <div class="modal-footer">
                                  <input class="btn btn-default" type="submit" value="Save" />
                                  <a class="btn btn-primary" href="{{path('loanparameter_index')}}">Back to the list</a>
                                </div>
                                {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}