{% extends 'base.html.twig' %}
{% block title %} {{parent()}} edit beneficiary{% endblock %}
{% block contenu %}

    <ol class="breadcrumb">
        <li>
            <a href="#">HYMIF</a>
        </li>
        <li>
            <a href="#">Beneficiaries</a>
        </li>
        <li class="active">
            Edit
        </li>
    </ol>

<h1 class="text-center">Edit informations of a beneficiary</h1>

{{form_start(form)}}
<div class="row">
        <div class="tab-content"> 
            <div class="tab-pane active" id="civility"> 
                <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{form_label(form.name)}}
                        {{form_errors(form.name)}}
                        {{form_widget(form.name, {'attr':{'class':'form-control'}})}}
                    </div>
                </div>
                    <div class="col-md-4">
                    <div class="form-group">
                        {{form_label(form.relation)}}
                        {{form_errors(form.relation)}}
                        {{form_widget(form.relation, {'attr':{'class':'form-control'}})}}
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                        {{form_label(form.ratio)}}
                        {{form_errors(form.ratio)}}
                        {{form_widget(form.ratio, {'attr':{'class':'form-control'}})}}
                    </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                        </div>
                    </div>
            </div>
        </div>
</div>
    {% include 'beneficiary/extras.css.html.twig' %}
    {% include 'beneficiary/extras.js.html.twig' %}

{% endblock %}