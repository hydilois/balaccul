{% extends 'base.html.twig' %}

{% block body %}
    <h1>Internalaccount</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ internalAccount.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ internalAccount.name }}</td>
            </tr>
            <tr>
                <th>Accountnumber</th>
                <td>{{ internalAccount.accountNumber }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ internalAccount.description }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ internalAccount.amount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('internalaccount_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('internalaccount_edit', { 'id': internalAccount.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
