{% extends 'base.html.twig' %}
{% block title %}{{parent()}} Accounts list{% endblock %}
{% block contenu %}
     <ol class="breadcrumb">
    <li>
      <a href="#">HYMIF</a>
    </li>
    <li>
      <a href="#">Internal Accounts</a>
    </li>
    <li class="active">
      Consult
    </li>
  </ol>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive"><a class="btn btn-default pull-left" href="{{path('internalaccount_new')}}">Add a new account</a><br>
            <h4 class="m-t-0 header-title text-center"><b>Account list</b></h4>
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 100px;">Actions</th>
                        <th>Account Number</th>
                        <th>Account Name</th>
                        <th>Ending Balance</th>
                    </tr>
                </thead>
                {% for internalAccount in internalAccounts %}
                    <tr>
                        <td>
                            <div class="input-group-btn">
                              <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Actions
                                <span class="fa fa-caret-down"></span></button>
                              <ul class="dropdown-menu">
                                <li>
                                    <a name="show-member" data-member="{{internalAccount.id}}" href="{{path('internalaccount_show', {id:internalAccount.id})}}"><i class="fa fa-eye"></i> Show</a>
                                </li>
                                <li><a href="{{ path('internalaccount_edit', { 'id': internalAccount.id }) }}"><i class="fa fa-edit"></i> Edit</a></li>
                              </ul>
                            </div>
                    </td>
                    <td>{{ internalAccount.accountNumber }}</td>
                    <td>{{ internalAccount.accountName }}</td>
                    <td>{{ internalAccount.balance |number_format(0, '.', ' ') }}</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

</div>
        
    {% include './internalaccount/extras.css.html.twig' %}
    {% include './internalaccount/extras.js.html.twig' %}
{% endblock %}

