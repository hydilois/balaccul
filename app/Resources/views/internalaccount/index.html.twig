{% extends 'base.html.twig' %}
{% block title %}{{parent()}} Accounts list{% endblock %}
{% block contenu %}
     <ol class="breadcrumb">
    <li>
      <a href="#">HYMIF</a>
    </li>
    <li>
      <a href="#">Internal Accounts</a>
    </li>
    <li class="active">
      list
    </li>
  </ol>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive"><a class="btn btn-default pull-left" href="{{path('internalaccount_new')}}">Add a new account</a><br>
            <h4 class="m-t-0 header-title text-center"><b>Account list</b></h4>
            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Account Number</th>
                        <th>Account Name</th>
                        <th>Ending Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                {% for account in accounts %}
                    <tr>
                    <td>{{ account.accountNumber }}</td>
                    <td>{{ account.accountName }}</td>
                    <td>{{ account.balance |number_format(0, '.', ' ') }}</td>
                    <td>
                        <a href="{{ path('internalaccount_edit', {id : account.id}) }}"><i class="fa fa-edit"></i> Edit</a>
                        <a href="{{ path('internalaccount_show', {id : account.id}) }}" style="color:#2bf0e3 !important;">
                            <i class="fa fa-eye-slash"></i> Show
                        </a>
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

</div>
        
    {% include 'internalaccount/extras.css.html.twig' %}
    {% include 'internalaccount/extras.js.html.twig' %}
{% endblock %}

