{% extends 'base.html.twig' %}
{% block title %}{{parent()}} Edit Account{% endblock %}
{% block contenu %}
    <h1 class="text-center">Account edit</h1>
    {{ form_start(edit_form) }}
          <div class="row">
            <div class="col-md-offset-2 col-md-8 col-sm-8 col-xs-8">
              <div class="media-left">
              </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label for="">Account Number</label>
                        <input type="text" readonly="readonly" class="form-control" value="{{internalAccount.accountNumber}}">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        {{form_label(edit_form.accountName)}}
                        {{form_errors(edit_form.accountName)}}
                        {{ form_widget(edit_form.accountName, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label for="">BEGINING BALANCE</label>
                        <input type="text" readonly="readonly" class="form-control" value="{{internalAccount.beginingBalance}}">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label for="">DEBIT</label>
                       <input type="text" readonly="readonly" class="form-control" value="{{internalAccount.debit}}">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label for="">CREDIT</label>
                        <input type="text" readonly="readonly" class="form-control" value="{{internalAccount.credit}}">
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="form-group">
                        <label for="">ENDING BALANCE</label>
                        <input type="text" readonly="readonly" class="form-control" value="{{internalAccount.endingBalance}}">
                    </div>
                </div><br>
                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Save" />
                        <a class="btn btn-primary" href="{{ path('internalaccount_index') }}">Back to the list</a>
                                {{ form_end(edit_form) }}
                    </div>
        </div>
    </div>
{% endblock %}
