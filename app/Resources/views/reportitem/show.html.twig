{% extends 'base.html.twig' %}

{% block contenu %}
    <h1>Reportitem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reportItem.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reportItem.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reportitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reportitem_edit', { 'id': reportItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
