{% extends 'base.html.twig' %}
{% block title %}{{parent()}} New Report Item{% endblock %}

{% block contenu %}

    <ol class="breadcrumb">
        <li>
            <a href="#">BALACCUL</a>
        </li>
        <li>
            <a href="#">Report items</a>
        </li>
        <li class="active">
            Edit Item
        </li>
    </ol>

        <!-- Forms -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <h4 class="m-t-0 header-title text-center"><b>Edit a report item</b></h4>
                                      {{ form_start(edit_form) }}
                                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(edit_form.name)}}
                                                  {{form_errors(edit_form.name)}}
                                                  {{form_widget(edit_form.name, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(edit_form.parentItem)}}
                                                  {{form_errors(edit_form.parentItem)}}
                                                  {{form_widget(edit_form.parentItem, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                  </div>
                                <div class="modal-footer">
                                  <input class="btn btn-default" type="submit" value="Save" />
                                  <a class="btn btn-primary" href="{{path('reportitem_index')}}">Back to the list</a>
                                </div>
                                {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}






