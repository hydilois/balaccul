<style type="text/css">
    table {
        width: 100%;
        line-height: 5mm;
        border-collapse: collapse;
    }

    .p-25{ width: 25%;}
    .p-50{ width: 50%;}
    .p-60{ width: 60%;}
    .p-75{ width: 75%;}
    .p-20{ width: 20%;}
    .p-40{ width: 40%;}
    .p-15{ width: 15%;}

    .zone td, .zone th {
        height: 30px;
        font-size: 15px;
    }
    .text-center {
        text-align: center;
    }

</style>

<page backtop="10mm" backleft="10mm" backright="10mm" backbottom="10mm" footer="page;">
    <page_footer>
        <hr />
        <span>{{ agency.abreviation | upper}}</span><span style="margin-left:300px;">GreenSoft-Group Technologies</span>
    </page_footer>
    <table>
        <tr>
            <td class="p-60">
                <b>{{agency.name}}</b><br>
                <b>HEAD OFFICE {{agency.town}}</b><br/>
                 <b>TEL: {{agency.phoneNumber}}</b><br>
                 <b>PO Box: {{agency.poBox}}</b><br>

            </td>
            <td  style="text-align: right;" class="p-40">
                <img style="height:80px;" src="./assets/images/users/logo_cu1.jpg"  alt="logo">
            </td>
        </tr>
    </table><br>

    <table style="margin-top: 10px;">
        <tr>
            <td class="p-20" style="text-align: left;"></td>
            <td class="p-60 text-center" style="font-size:20px"><strong>
            REGISTRATION  RECEIPT
            </strong></td>
            <td class="p-20" style="text-align: right;"></td>
        </tr>
    </table><br>
    <table>
        <tr>
            <td class="p-25" style="text-align: left;">XAF: <b>F CFA</b></td>
            <td class="p-75" style="text-align: right;">DATE: <b>{{member.memberShipDateCreation |date('d-m-Y H:i:s')}} </b> </td>
        </tr>
    </table>
    <table class="zone">
        <tr>
            <td class="p-50" style="border-right:1px solid black;">Name: <b>{{member.name}}</b></td>
            <td class="p-50" >Account Number: <b>{{member.memberNumber}}</b></td>
        </tr>
        <tr>
            <td class="p-50" style="border-right:1px solid black;">Phone Number: <b>{{member.phoneNumber}}</b></td>
            <td class="p-50">NIC Number: <b>{{member.nicNumber}}</b></td>
        </tr>
        {% set total = 0 %}
        <tr>
            {% if member.registrationFees %}
                <td class="p-50" style="border-right:1px solid black;">Registration Fees: <b>{{ member.registrationFees }}</b></td>
                {% set total = total + member.registrationFees %}
            {% endif %}
            {% if member.share %}
                <td class="p-50">Shares : <b>{{ member.share }}</b></td>
                {% set total = total + member.share %}
            {% endif %}
        </tr>
        <tr>
            {% if member.saving %}
                <td class="p-50" style="border-right:1px solid black;">Savings : <b>{{ member.saving }}</b></td>
                {% set total = total + member.saving %}
            {% endif %}
            {% if member.deposit %}
                <td class="p-50">Deposit : <b>{{ member.deposit }}</b></td>
                {% set total = total + member.deposit %}
            {% endif %}
        </tr>
        {% if member.buildingFees %}
            <tr>
                <td class="p-50">Building Fees : <b>{{ member.buildingFees }}</b></td>
                {% set total = total + member.buildingFees %}
            </tr>
        {% endif %}
    </table>
<br>
