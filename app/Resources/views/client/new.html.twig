
{% extends 'base.html.twig' %}
{% block title %}{{parent()}}New Client {% endblock %}

{% block contenu %}

    <ol class="breadcrumb">
        <li>
            <a href="#">HYMIF</a>
        </li>
        <li>
            <a href="#">Daily Service</a>
        </li>
        <li class="active">
            New Client
        </li>
    </ol>

        <!-- Forms -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <h4 class="m-t-0 header-title text-center"><b>Add a new client</b></h4>
                                      {{ form_start(form) }}
                                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(form.name)}}
                                                  {{form_errors(form.name)}}
                                                  {{form_widget(form.name, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(form.idNumber)}}
                                                  {{form_errors(form.idNumber)}}
                                                  {{form_widget(form.idNumber, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                          <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                              <div class="form-group">
                                                  {{form_label(form.collector)}}
                                                  {{form_errors(form.collector)}}
                                                  {{form_widget(form.collector, {'attr' : {'class':'form-control'}})}}
                                              </div>
                                          </div>
                                  </div>
                                <div class="modal-footer">
                                  <input class="btn btn-default" type="submit" value="Save" />
                                  <a class="btn btn-primary" href="{{path('client_index')}}">Back to the list</a>
                                </div>
                                {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


