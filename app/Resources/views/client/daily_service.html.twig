{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} Cash in operation{% endblock %}
{% block contenu %}
    <ol class="breadcrumb">
    <li>
      <a href="#">BALACUL</a>
    </li>
    <li>
      <a href="#">Operation</a>
    </li>
    <li class="active">
      Daily service 
    </li>
  </ol>
        <h1 class="text-center">DAILY SERVICE OPERATIONS</h1>
        <section class="col-lg-3">
            <fieldset>
                <legend>Operation</legend>
                <div class="form-group">
                    <label class="control-label col-sm-4">Operation</label>
                        <select id="operationType" class="form-control">
                            <option value="">&lt;------ Select ------&gt;</option>
                            <option value="1">DEPOSIT</option>
                            <option value="2">WITHDRAWAL</option>
                            <option value="3">CHARGES</option>
                        </select>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-4">Clients</label>
                        <select id="clientId" class="form-control">
                            <option value="">&lt;------ Select ------&gt;</option>
                            {% for client in clients %}
                                <option value="{{client.id}}">{{client.name}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Amount</label>
                        <input type="number" class="form-control" value="0" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-default" name="btn-save-operation" href="#">Save</a>
                        <a class="btn btn-primary" name="btn-formaccount-reset" href="#">Reset</a>
                    </div>
            </fieldset>
            
        </section>
        <section  class="col-lg-9">
            <fieldset id="detailClient" class="fadeInDown animated hide">
                <legend>Details on the account</legend>

                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <div class="widget-bg-color-icon card-box">
                            <div class="text-left">
                                <span><strong> Solde </strong></span>
                                <h3 class="text-dark"><b id="solde" class="counter"></b></h3>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                </div>
                <div class="col-md-6 col-lg-6">
                        <div class="widget-bg-color-icon card-box">
                            <div class="text-left">
                                <span><strong> Client Name </strong></span>
                                <h3 class="text-dark"><b id="clientNamed">0</b></h3>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </fieldset>
        {% include './operation/extras.css.html.twig' %}
        {% include './client/extras.js.html.twig' %}
{% endblock %}
