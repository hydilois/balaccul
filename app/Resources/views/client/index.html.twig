{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Daily Clients Accounts{% endblock %}

{% block contenu %}
         <ol class="breadcrumb">
        <li>
          <a href="#">BALACCUL</a>
        </li>
        <li>
          <a href="#">Accounts</a>
        </li>
        <li>
          <a href="#">Daily service</a>
        </li>
        <li class="active">
          Consult
        </li>
      </ol>
      
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">
                <h4 class="m-t-0 header-title text-center"><b>Daily Service Client List</b></h4>
                <a class="btn btn-default" href="{{path('client_new')}}">New CLient</a><br><br>
                <table id="datatable-buttons" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 100px;">Actions</th>
                           <th>Name</th>
                           <th>Idnumber</th>
                           <th>Amount</th>
                           <th>Collector</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>
                                <div class="input-group-btn">
                                  <button type="button" class="btn btn-primary btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Actions
                                    <span class="fa fa-caret-down"></span></button>
                                  <ul class="dropdown-menu fadeInUp animated">
                                    <li><a href="#"><i class="fa fa-edit"></i> Edit</a></li>
                                    <li><a href="{{path('client_show', {id:client.id})}}"><i class="fa fa-eye"></i> Details</a></li>
                                  </ul>
                                </div>
                        </td>
                        <td>{{ client.name }}</td>
                        <td>{{ client.idNumber }}</td>
                        <td>{{ client.amount }} F CFA</td>
                        <td>{{ client.collector }}</td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
  </div>
