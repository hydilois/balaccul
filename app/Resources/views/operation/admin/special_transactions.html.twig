{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} Cash Out operation{% endblock %}
{% block contenu %}
    <ol class="breadcrumb">
    <li>
      <a href="#">HYMIF</a>
    </li>
    <li>
      <a href="#">Administration</a>
    </li>
    <li class="active">
      Special Transactions
    </li>
  </ol>
  <div class="card-box">
      <div class="row">
            <h1 class="text-center">SPECIAL TRANSACTIONS</h1>
        <form target="_blank" method="POST" action="{{ path('special_transactions') }}">
            <fieldset class="fadeInDown animated">
                <legend>Purposes</legend>
                <section class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label">Date of the Operation</label>
                        <div>
                            <div class="input-group">
                                <input type="text" required class="form-control" placeholder="day/month/year" id="datepicker-autoclose" name="date_operation">
                                <span class="input-group-addon bg-custom b-0 text-white"><i class="icon-calender"></i></span>
                            </div><!-- input-group -->
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="type" class="control-label">Operation's type</label>
                        <select name="type" id="type" class="form-control" required="required">
                                <option value="cr">CREDIT</option>
                                <option value="dr">DEBIT</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="account_number" class="control-label">Choose the Account</label>
                        <select id="account_number" name="account_number" class="form-control select2" required="required">
                            <option value="">&lt;------ Select ------&gt;</option>
                            {% for account in internalAccounts %}
                                <option value="{{account.id}}">{{account.accountName}} </option>
                            {% endfor %}
                        </select>
                    </div>
                </section>
                <section class="col-lg-6">
                <div class="form-group">
                    <label for="representative">Representative or Beneficiary or Motif</label>
                    <input name="representative" id="representative" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="amount">Amount</label>
                    <input name="amount" type="number" required data-parsley-min="1" id="amount" min="1" class="form-control" value="0" />
                </div>
                    <div class="form-group pull-right">
                        <input class="btn btn-default" type="submit" value="Save">
                        <a class="btn btn-white" href="{{path('homepage')}}">Back to the homepage</a>
                    </div>
                </section>
            </fieldset>
    </form>
    </div>  
    </div>
        {% include 'operation/extras.css.html.twig' %}
        {% include 'operation/extras_cash_in.js.html.twig' %}
{% endblock %}