{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} Cash Out operation{% endblock %}
{% block contenu %}
    <ol class="breadcrumb">
    <li>
      <a href="#">HYMIF</a>
    </li>
    <li>
      <a href="#">Administration</a>
    </li>
    <li class="active">
      Back Office
    </li>
  </ol>
  <div class="card-box">
      <div class="row">
            <h1 class="text-center">BACK OFFICE OPERATION</h1>
        <form method="POST" action="{{ path('back_office_operation') }}">
            <fieldset class="fadeInDown animated">
                <legend>Update the General Ledger</legend>
                <section class="col-lg-6">
                <div class="form-group">
                    <label for="reference">Reference or Id</label>
                    <input name="reference" id="reference" type="number" required data-parsley-min="1" class="form-control" value="1" />
                </div>
                <div class="form-group">
                    <label for="amount">Amount</label>
                    <input name="amount" type="number" required data-parsley-min="1" id="amount" min="-50000000" class="form-control" value="0" />
                </div>
                    <div class="form-group pull-right">
                        <input class="btn btn-default" type="submit" value="Save">
                        <a class="btn btn-white" href="{{path('homepage')}}">Back to the homepage</a>
                    </div>
                </section>
            </fieldset>
    </form>
    </div>  
    </div>
        {% include 'operation/extras.css.html.twig' %}
        {% include 'operation/extras_cash_in.js.html.twig' %}
{% endblock %}